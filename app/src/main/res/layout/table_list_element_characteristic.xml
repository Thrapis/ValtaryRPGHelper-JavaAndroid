<?xml version="1.0" encoding="utf-8"?>
<GridLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:columnCount="3">

    <TextView
        android:id="@+id/characteristic_name"
        android:layout_columnWeight="0.4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_column="0"
        android:textSize="16sp"
        android:text="characteristic_name"
        android:paddingHorizontal="@dimen/form_field_horizontal_margin"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/characteristic_clear"
        android:layout_columnWeight="0.3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_column="1"
        android:textSize="16sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/characteristic_full"
        android:layout_columnWeight="0.3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_column="2"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"/>

</GridLayout>


